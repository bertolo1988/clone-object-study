  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug tests",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--testTimeout=30000", "test/"],
      "env": { "NODE_ENV": "test" },
      "console": "integratedTerminal"
    },
    {
      "name": "Debug current test file",
      "type": "node",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--testTimeout=30000", "${file}"],
      "env": { "NODE_ENV": "test" },
      "console": "integratedTerminal"
    }
  ]
}
